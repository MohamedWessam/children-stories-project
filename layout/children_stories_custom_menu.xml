<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:orientation="horizontal"
        android:weightSum="1">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left|center_vertical"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.45"
            android:weightSum="3">

        <ImageView
                android:id="@+id/custom_menu_btn_back"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:paddingVertical="@dimen/stories_custom_menu_imgview_padding_vir"
                android:src="@drawable/ic_back"/>

        <ImageView
                android:id="@+id/custom_menu_btn_font_s"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:paddingVertical="@dimen/stories_custom_menu_imgview_padding_vir"
                android:src="@drawable/font_s"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/custom_menu_btn_font_l"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:paddingVertical="@dimen/stories_custom_menu_imgview_padding_vir"
                android:src="@drawable/font_l"
                android:visibility="gone"/>

        <ImageView
                android:id="@+id/custom_menu_btn_font_m"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:layout_gravity="left"
                android:foregroundGravity="left"
                android:paddingVertical="@dimen/stories_custom_menu_imgview_padding_vir"
                android:src="@drawable/font_m"/>

        <ImageView
                android:id="@+id/custom_menu_btn_brightness"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:paddingVertical="@dimen/stories_custom_menu_imgview_padding_vir"
                android:src="@drawable/brightness"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="right|center_vertical"
            android:gravity="right|center_vertical"
            android:layout_weight="0.55">

        <TextView
                android:id="@+id/custom_menu_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الحمار والبلبل"
                android:textColor="@color/white"
                android:textSize="@dimen/stories_custom_menu_txtview_size"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/stories_custom_menu_txtview_padding_right"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>